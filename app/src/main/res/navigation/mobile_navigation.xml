<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/notesFragment">

    <fragment
            android:id="@+id/notesFragment"
            android:name="bry1337.github.io.navigationcomponentpoc.presentation.notelist.NoteListFragment"
            android:label="@string/label_note_list"
            tools:layout="@layout/note_list_fragment">
        <action android:id="@+id/action_notes_to_addNote"
                app:destination="@+id/addNoteFragment"/>
        <action
                android:id="@+id/action_notes_to_noteDetail"
                app:destination="@+id/noteDetailFragment"/>
    </fragment>

    <fragment
            android:id="@+id/noteDetailFragment"
            android:name="bry1337.github.io.navigationcomponentpoc.presentation.notedetail.NoteDetailFragment"
            android:label="@string/label_note_detail"
            tools:layout="@layout/note_detail_fragment">
        <argument
                android:name="noteId"
                app:argType="integer"/>
        <action
                android:id="@+id/action_noteDetail_to_editNote"
                app:destination="@+id/editNoteFragment"/>
        <action android:id="@+id/action_noteDetail_to_deleteNote"
                app:destination="@+id/deleteNoteFragment"/>
        <deepLink
                android:id="@+id/noteDetailDeepLink"
                app:uri="notesapp://notes/{noteId}"/>
    </fragment>

    <fragment android:id="@+id/addNoteFragment"
              android:name="bry1337.github.io.navigationcomponentpoc.presentation.addnote.AddNoteFragment"
              android:label="@string/label_add_note"
              tools:layout="@layout/add_note_fragment">
    </fragment>

    <fragment android:id="@+id/editNoteFragment"
              android:name="bry1337.github.io.navigationcomponentpoc.presentation.editnote.EditNoteFragment"
              android:label="@string/label_edit_note"
              tools:layout="@layout/edit_note_fragment">
        <argument android:name="noteId"
                  app:argType="integer"/>
    </fragment>

    <fragment android:id="@+id/deleteNoteFragment"
              android:name="bry1337.github.io.navigationcomponentpoc.presentation.deletenote.DeleteNoteFragment"
              android:label="@string/label_delete_note"
              tools:layout="@layout/delete_note_fragment">
        <argument
                android:name="noteId"
                app:argType="integer"/>
    </fragment>
</navigation>